<article class="post">
    <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{formatUrl post_url}})</span>
    </div>
    <div class="meta">
    {{vote_count}} {{formatPlural 'point' vote_count}} by {{user.username}} on
    {{formatDate created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{formatPlural 'comment' comments.length}}</a>
    </div>
</article>